{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Raytracer Debug (LLDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/raytracer",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "settings set target.inline-breakpoint-strategy always",
          "ignoreFailures": true
        }
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
